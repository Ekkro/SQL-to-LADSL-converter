#include <stdio.h>
#include <strings.h>
#include "SQLtoLADSL.hpp"


void funcao(Graph g , Ltree t,int x=0){
  if(t.ltree[x] == "OR" && g.isThe_same_Table(t.left_child(x),t.right_child(x)){
    int parent = t.ind_Parent(x);
    vector<String> s = t.split(0,parent);
    t.add_tree(s,t.ind_left_child(x));
    t.add_tree(s,t.ind_right_child(x));
    t.add("OR",parent);
    t.searh_nextOR(parent);
  }else{
    if(t.ltree!="NULL"){
      funcao(g,(ind_left_child(x));
      funcao(g,(ind_right_child(x));
    }
  }
}
